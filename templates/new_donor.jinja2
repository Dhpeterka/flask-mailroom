{% extends 'base.jinja2' %}

{% block subtitle %}New Donor{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="name">Donor: </label><input type="text" id="name" name="name">
    <label for="amount">Donation: </label><input type="number" id="amount" name="amount">
    <input type="submit" value="Add Donor & Donation">
</form>

{% endblock content %}

